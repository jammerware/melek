<UserControl 
    x:Class="Nivix.Views.PackageBuilderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mui="http://firstfloorsoftware.com/ModernUI"
    xmlns:b="clr-namespace:Nivix.Infrastructure.Behaviors"
    xmlns:c="clr-namespace:Nivix.Infrastructure.ValueConverters"
    xmlns:vm="clr-namespace:Nivix.ViewModels">
    <UserControl.DataContext>
        <vm:PackageBuilderViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <c:StringDateConverter x:Key="StringDateConverter" />
    </UserControl.Resources>
    <Grid Style="{StaticResource ContentRootStyle}">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock 
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="name your package (heh heh)" />
                
                <TextBox
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="{StaticResource HorizontalAndVerticalControlMargin}"
                    Text="{Binding PackageName}"/>

                <TextBlock 
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="give it an id" />
                
                <TextBox
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="{StaticResource HorizontalAndVerticalControlMargin}"
                    Text="{Binding PackageID}"/>

                <TextBlock 
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="card release date" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="0"
                    Margin="{StaticResource HorizontalAndVerticalControlMargin}"
                    Text="{Binding CardReleaseDate, Converter={StaticResource StringDateConverter}}"/>

                <TextBlock 
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="source database (xml)" />
                <TextBox
                    Grid.Row="7"
                    Grid.Column="0"
                    x:Name="txtSourceDatabase"
                    Margin="{StaticResource HorizontalAndVerticalControlMargin}"
                    IsReadOnly="True"
                    Text="{Binding SourceDatabasePath}">
                    <i:Interaction.Behaviors>
                        <b:TextBoxFileDialogBehavior TargetFileDescription="Gatherer Extractor Database" TargetFileExtension="xml" />
                    </i:Interaction.Behaviors>
                </TextBox>
                <Button
                    Grid.Row="7"
                    Grid.Column="1"
                    Content="select"
                    Margin="{StaticResource VerticalControlMargin}">
                    <i:Interaction.Behaviors>
                        <b:FocusControlOnClickBehavior FocusTarget="{Binding ElementName=txtSourceDatabase}" />
                    </i:Interaction.Behaviors>
                </Button>

                <TextBlock 
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="manifest (leave blank to create a new one)" />
                <TextBox
                    Grid.Row="9"
                    Grid.Column="0"
                    x:Name="txtManifest"
                    Margin="{StaticResource HorizontalAndVerticalControlMargin}"
                    Text="{Binding ManifestPath}">
                    <i:Interaction.Behaviors>
                        <b:TextBoxFileDialogBehavior TargetFileDescription="Melek package manifest" TargetFileExtension="xml" />
                    </i:Interaction.Behaviors>
                </TextBox>
                <Button
                    Grid.Row="9"
                    Grid.Column="1"
                    Content="select"
                    Margin="{StaticResource VerticalControlMargin}">
                    <i:Interaction.Behaviors>
                        <b:FocusControlOnClickBehavior FocusTarget="{Binding ElementName=txtManifest}" />
                    </i:Interaction.Behaviors>
                </Button>

                <TextBlock 
                    Grid.Row="10"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="output to" />
                <TextBox
                    x:Name="txtOutputPath"
                    Grid.Row="11"
                    Grid.Column="0"
                    Margin="{StaticResource HorizontalAndVerticalControlMargin}"
                    Text="{Binding OutputPath}">
                    <i:Interaction.Behaviors>
                        <b:TextBoxFolderBrowserDialogBehavior />
                    </i:Interaction.Behaviors>
                </TextBox>
                <Button
                    Grid.Row="11"
                    Grid.Column="1"
                    Content="select"
                    Margin="{StaticResource VerticalControlMargin}">
                    <i:Interaction.Behaviors>
                        <b:FocusControlOnClickBehavior FocusTarget="{Binding ElementName=txtOutputPath}" />
                    </i:Interaction.Behaviors>
                </Button>

                <TextBlock 
                    Grid.Row="12"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Foreground="{StaticResource SubtleBrush}"
                    Margin="{StaticResource VerticalControlMargin}"
                    Style="{StaticResource FieldLabelStyle}"
                    Text="output environments" />
                <StackPanel
                    Grid.Row="13"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal">
                    <CheckBox 
                        Content="dev"
                        IsChecked="{Binding DeployToDev}"
                        Margin="{StaticResource HorizontalAndVerticalControlMargin}" />
                    <CheckBox 
                        Content="production" 
                        IsChecked="{Binding DeployToProd}"
                        Margin="{StaticResource HorizontalAndVerticalControlMargin}" />
                </StackPanel>

                <Button
                    Grid.Row="14"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Command="{Binding GoCommand}"
                    Content="go"
                    Margin="0,16,0,0"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>